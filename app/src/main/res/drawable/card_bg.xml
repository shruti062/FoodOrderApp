<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFFFF" />  <!-- white background -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Subtle shadow/border effect -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional padding inside -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
